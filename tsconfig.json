{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "incremental": true,
    "target": "ES2017",
    "module": "ES2015",
    "lib": ["ES2017"],
    "noEmit": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
